@inherits Umbraco.Cms.Web.Common.Views.UmbracoViewPage

@using Umbraco.Cms.Core.Models


<section class="showcase">
      <div class="container-fluid">
        <div class="text-area">
          <h2>@Model.Value("showcaseTitle")</h2>
          <p>
            @Model.Value("showcaseDescription")
          </p>
          <a class="btn-theme"
            href="@Model.Value("showcaseButtonURL")"
            >@Model.Value("showcaseButtonText") <i class="fa-regular fa-arrow-up-right"></i
          ></a>
          <a class="btn-theme-line"
            >Learn More <i class="fa-regular fa-arrow-up-right"></i
          ></a>
        </div>
        <div class="image-area">
        @{
            var showcaseImage = Model.Value<MediaWithCrops>("showcaseImage");
            if (showcaseImage != null)
            {
            <img src="@showcaseImage.MediaUrl()" alt="@Model.Value("showcaseTitle")" />
            }
        }
        <!-- <img src="./images/showcase-image.svg" alt="showcase-image" /> -->
        </div>
        <img
          class="background-lines"
          src="./images/bg-effects/background-lines.svg"
          alt="background-lines"
        />
      </div>
</section>